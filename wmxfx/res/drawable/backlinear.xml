<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>  
        <shape>  
            <solid android:color="@color/textused" />  <!-- 填充色背景 -->
            <corners android:topLeftRadius="10dp" android:topRightRadius="10dp"/>  <!-- 设置圆角 -->
            <stroke android:width="0dp" android:color="@color/textused" />  <!-- 设置边界线的宽度和颜色 -->
            <padding                     
                    android:left="5dp"  
                    android:top="5dp"  
                    android:right="5dp"  
                    android:bottom="5dp"  
                    />  <!-- padding -->
        </shape>  
    </item>
</layer-list>

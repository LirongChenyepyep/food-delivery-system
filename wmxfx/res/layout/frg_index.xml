<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/textunused">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:background="@color/textused">
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="16"
            android:orientation="horizontal">
            
            <RelativeLayout 
	            android:id="@+id/rl_location"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_marginLeft="20dip"
	            android:background="@drawable/relativeback"
	            android:clickable="true">
	            
	            <ImageView 
	                android:id="@+id/iv_location_icon"
	                android:layout_width="18sp"
	                android:layout_height="18sp"
	                android:layout_alignParentLeft="true"
	                android:layout_centerVertical="true"
	                android:layout_marginRight="5dip"
	                android:background="@drawable/location"
	            	android:contentDescription="@string/content_desc"/>
	            
	            <TextView 
	                android:id="@+id/tv_poi"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="right"
		            android:layout_centerInParent="true"
		            android:layout_toRightOf="@+id/iv_location_icon"
	      			android:singleLine="true"
	       		    android:ellipsize="start"
	       		    android:textSize="18sp"
		            />
	            
	        </RelativeLayout>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/relativeback"
            android:clickable="true">
            
            <ImageView 
	            android:id="@+id/iv_search"
	            android:layout_width="18sp"
	            android:layout_height="18sp"
	            android:background="@drawable/search"
	            android:contentDescription="@string/content_desc"/>
            
        </LinearLayout>
        
        
    </LinearLayout>
    
    <!-- 主题图片  
    <com.darna.wmxfx.layout.SlideShowView
        android:id="@+id/slideshowView"
        android:layout_width="fill_parent"
        android:layout_height="90dp" />
    
    <com.darna.wmxfx.layout.ShopOnLineNew 
        android:id="@+id/shoponlinenew"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
        
    <com.darna.wmxfx.layout.ShopAll
        android:id="@+id/shopall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>-->
        
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:baselineAligned="false"
	    android:background="@color/backover"
	    android:orientation="horizontal" >
    
	    <RelativeLayout 
	        android:id="@+id/rl_sequence"
	        android:layout_weight="1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="1dp"
	        android:background="@color/black"
	        android:padding="5dp"
	        android:onClick="true">
	        
	        <TextView 
	            android:id="@+id/tv_sequence"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:textColor="@color/textunused"
	            android:layout_centerInParent="true"
	            android:text="@string/sequence"/>
	        
	        <ImageView 
	            android:id="@+id/iv_sequence"
	            android:layout_toRightOf="@+id/tv_sequence"
	            android:layout_marginLeft="10dp"
	            android:layout_width="13sp"
	            android:layout_height="13sp"
	            android:contentDescription="@string/content_desc"
	            android:src="@drawable/rdown"
	            android:layout_centerVertical="true"/>
	        
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_alltaste"
	        android:layout_weight="1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/black"
	        android:padding="5dp">
	        
	        <TextView 
	            android:id="@+id/tv_alltaste"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/textunused"
	            android:layout_centerInParent="true"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:text="@string/alltaste"/>
	        
	        <ImageView 
	            android:id="@+id/iv_alltaste"
	            android:layout_toRightOf="@+id/tv_alltaste"
	            android:layout_marginLeft="10dp"
	            android:layout_width="13sp"
	            android:layout_height="13sp"
	            android:contentDescription="@string/content_desc"
	            android:src="@drawable/rdown"
	            android:layout_centerVertical="true"/>
	        
	    </RelativeLayout>
	</LinearLayout>
	
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/pull_refresh_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:divider="#19000000"
        android:dividerHeight="1dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true" />
    
    <TextView 
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:text="正在加载中。。。"/>
   
</LinearLayout>










